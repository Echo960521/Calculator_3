<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.edu.bistu.cs.se.calculator_new.Land_MainActivity">

    <EditText
        android:id="@+id/input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:cursorVisible="false"
        android:text="0"
        />
    <!-- 默认显示字符串0 -->
    <TextView
        android:id="@+id/mem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:gravity="right"
        android:text="0"
        />

    <TableLayout
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="7"
                android:background="#e6e3e3" />
            <Button
                android:id="@+id/eight"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="8"
                android:background="#e6e3e3" />
            <Button
                android:id="@+id/nine"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="9"
                android:background="#e6e3e3" />
            <Button
                android:id="@+id/add"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="+"
                android:background="#0a36f8" />
            <Button
                android:id="@+id/c"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="C"
                android:background="#ff0206" />


            <Button android:id="@+id/sin"
                android:text="sin"
                android:textSize="20dp"
                android:layout_width="65sp"
                android:layout_height="wrap_content"
                android:background="#585858" />

        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/four"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="4"
                android:background="#e6e3e3" />
            <Button
                android:id="@+id/five"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:background="#e6e3e3" />
            <Button
                android:id="@+id/six"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="6"
                android:background="#e6e3e3" />
            <Button
                android:id="@+id/sub"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="-"
                android:background="#0a36f8" />


            <!-- 左括号 -->
            <Button android:id="@+id/left"
                android:text="("
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:background="#585858" />
            <Button android:id="@+id/cos"
                android:text="cos"
                android:textSize="20dp"
                android:layout_width="65sp"
                android:layout_height="wrap_content"
                android:background="#585858" />

        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/one"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="1"
                android:background="#e6e3e3" />
            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="2"
                android:background="#e6e3e3" />
            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="20dp"
                android:background="#e6e3e3" />
            <Button
                android:id="@+id/mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="×"
                android:background="#0a36f8" />
            <!-- 右括号 -->
            <Button android:id="@+id/right"
                android:text=")"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#585858" />


            <Button android:id="@+id/tan"
                android:text="tan"
                android:textSize="20dp"
                android:layout_width="65sp"
                android:layout_height="wrap_content"
                android:background="#585858" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="20dp"
                android:background="#e6e3e3" />


            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="0"
                android:background="#e6e3e3" />
            <Button
                android:id="@+id/equal"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:background="#fd6913" />
            <Button
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="÷"
                android:background="#0a36f8" />

            <Button
                android:id="@+id/ln"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="in"
                android:background="#585858" />

            <Button
                android:id="@+id/log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="log"
                android:background="#585858" />


        </TableRow>

    </TableLayout>


</RelativeLayout>