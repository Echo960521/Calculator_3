<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.edu.bistu.cs.se.calculator_new.TransformActivity"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_marginTop="30dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厘米"
                android:textColor="#000000" />
            <EditText
                android:textSize="20dp"
                android:layout_width="225px"
                android:layout_height="wrap_content"
                android:id="@+id/et_li"
                android:textColor="#000000" />
            <Button
                android:textSize="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="转"
                android:background="#f5c928"
                android:id="@+id/btn_li"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="米"
                android:textColor="#000000"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="268px"
                android:layout_height="wrap_content"
                android:id="@+id/et_m"
                android:textSize="20dp"
                android:maxLength="30"
                android:textColor="#000000" />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="转"
                android:background="#f5c928"
                android:textSize="20dp"
                android:id="@+id/btn_m"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="千米"
                android:textColor="#000000"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="225px"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_qianmi"
                android:textColor="#000000" />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="转"
                android:background="#f5c928"
                android:id="@+id/btn_qianmi"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英里"
                android:textColor="#000000" />
            <EditText
                android:layout_width="225px"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_mile"
                android:textColor="#000000" />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="转"
                android:background="#f5c928"
                android:textSize="20dp"
                android:id="@+id/btn_mile"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英尺"
                android:textSize="20dp"
                android:textColor="#000000" />
            <EditText
                android:layout_width="225px"
                android:layout_height="wrap_content"
                android:id="@+id/et_foot"
                android:textSize="20dp"
                android:textColor="#000000" />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="转"
                android:background="#f5c928"
                android:textSize="20dp"
                android:id="@+id/btn_foot"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英寸"
                android:textSize="20dp"
                android:textColor="#000000" />
            <EditText
                android:layout_width="230px"
                android:layout_height="wrap_content"
                android:id="@+id/et_inch"
                android:textSize="20dp"
                android:textColor="#000000" />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="转"
                android:background="#f5c928"
                android:textSize="20dp"
                android:id="@+id/btn_inch"/>

        </TableRow>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/clear2"
            android:text="重置"
            android:textSize="20dp"
            android:background="#ff0000" />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/returnn"
            android:text="计"
            android:textSize="20dp"
            android:layout_gravity="right"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/jin"
            android:text="进"
            android:textSize="20dp"
            android:layout_gravity="right"/>
    </LinearLayout>
</TableLayout>